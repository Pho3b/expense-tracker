<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.expensetracker.activity.view_model.CreateTransactionViewModel" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        tools:context=".activity.CreateTransactionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/expense_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@{viewModel.expenseBackground}"
                android:clickable="true"
                android:gravity="start"
                android:onClick="@{viewModel.onExpenseTypeBtnClick}"
                android:padding="8dp"
                android:text="@string/expense"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/income_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:background="@{viewModel.incomeBackground}"
                android:clickable="true"
                android:gravity="end"
                android:onClick="@{viewModel.onIncomeTypeBtnClick}"
                android:padding="8dp"
                android:text="@string/income"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:digits="0123456789."
            android:hint="@string/transaction_amount"
            android:inputType="numberDecimal"
            android:text="@={viewModel.amount}"
            android:textColor="@color/white" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/category_ids_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">
                <!-- List of Category Icons will be loaded here dynamically onCreate-->

            </LinearLayout>

        </HorizontalScrollView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Comment"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:hint=""
                android:text="@={viewModel.comment}"
                android:maxLines="1"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/openDatePickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Open DatePicker"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp"
            android:onClick="@{viewModel.onOpenDatePickerClick}"
            style="@style/DarkButtonStyle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Transaction"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp"
            android:onClick="@{viewModel.onAddTransactionClick}"
            style="@style/DarkButtonStyle" />

    </LinearLayout>
</layout>