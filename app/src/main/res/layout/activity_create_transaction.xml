<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.expensetracker.activity.view_model.CreateTransactionViewModel" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        tools:context=".activity.CreateTransactionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/expense_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@{viewModel.expenseBackground}"
                android:clickable="true"
                android:gravity="start"
                android:onClick="@{viewModel.expenseTypeBtnOnClick}"
                android:padding="8dp"
                android:text="@string/expense"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/income_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:background="@{viewModel.incomeBackground}"
                android:clickable="true"
                android:gravity="end"
                android:onClick="@{viewModel.incomeTypeBtnOnClick}"
                android:padding="8dp"
                android:text="@string/income"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:digits="0123456789."
            android:textColor="@color/white"
            android:hint="@string/transaction_amount"
            android:inputType="numberDecimal"
            android:text="@{viewModel.amount}" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/category_icon_size"
                    android:layout_height="@dimen/category_icon_size"
                    android:src="@drawable/ic_menu_camera"
                    android:padding="10dp"
                    android:clickable="true"
                    android:onClick="@{viewModel.onIconClicked}" />

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/category_icon_size"
                    android:layout_height="@dimen/category_icon_size"
                    android:src="@drawable/ic_menu_slideshow"
                    android:padding="10dp"
                    android:clickable="true"
                    android:onClick="@{viewModel.onIconClicked}" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</layout>